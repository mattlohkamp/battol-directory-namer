{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "checkJs": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "baseUrl": "./src",
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "types": [
      "vite/client",
      "vitest"
    ],
    "lib": [
      "es2021",
      "dom"
    ],
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}